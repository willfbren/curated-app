<%= form_with model: @user do |form| %>
<%= form.text_field :name, class: "form-control", placeholder: "Name"%><br>
<%= form.text_field :email, class: "form-control", placeholder: "Email"%><br>
<%= form.password_field :password, class: "form-control", placeholder: "Password" %><br>
<%= form.password_field :confirm_password, class: "form-control", placeholder: "Confirm Password"%><br>
<%= form.submit class: "btn btn-primary"%>
<% end %>
