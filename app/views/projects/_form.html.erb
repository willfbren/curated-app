<%= form_with model: @project do |form| %>
    <%= form.text_field :title, class: "form-control", placeholder: "Title"%><br>
    <%= form.text_area :description, class: "form-control", placeholder: "Description"%><br>
    <%= form.submit class: "btn btn-primary float-left"%>
<% end %>

<% if current_user.id == @project.user.id %>
    <%= form_with model: @post, method: "DELETE" do |form| %>
        <%= form.submit class: "btn btn-danger float-right", value: "Delete Project" %>
    <% end %>
<% end %>